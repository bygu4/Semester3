@page
@model HistoryModel

<h2>Test run history</h2>

@for (int i = 0; i < Model.TestRuns.Count; ++i)
{
    var testRun = Model.TestRuns[i];
    var status = testRun.Summary.AllTestsPassed ? "passed" : "failed";
    <h4>
        @i)
        <a class="label-@status" asp-page="/TestResult" asp-route-id=@testRun.TestRunId>
            Test run @testRun.TimeOfRun.ToString("HH:mm dd-MM-yyyy")
        </a>
    </h4>
}
